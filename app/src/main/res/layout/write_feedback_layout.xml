<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dip"
    android:paddingBottom="30dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip">

    <EditText
        android:id="@+id/feedback_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feedback_edittext_bg"
        android:hint="@string/feedback_input_hint"
        android:lines="10"
        android:maxLength="100"
        android:maxEms="100"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:weightSum="2">
        <Button
            android:id="@+id/feedback_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/feedback_cancel"
            android:background="@drawable/feedback_button_selector"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"/>
        <Button
            android:id="@+id/feedback_ok"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/feedback_ok"
            android:background="@drawable/feedback_button_selector"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"/>
    </LinearLayout>

</LinearLayout>
